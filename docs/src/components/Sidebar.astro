---
const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;

const navItems = [
  {
    title: 'Getting Started',
    items: [
      { title: 'Overview', href: `${base}docs/` },
      { title: 'Installation', href: `${base}docs/installation` },
    ]
  },
  {
    title: 'Usage',
    items: [
      { title: 'Commands', href: `${base}docs/commands` },
      { title: 'Basic Usage', href: `${base}docs/usage/basic` },
      { title: 'Advanced Usage', href: `${base}docs/usage/advanced` },
      { title: 'Configuration', href: `${base}docs/configuration` },
    ]
  },
  {
    title: 'Security',
    items: [
      { title: 'Security Overview', href: `${base}docs/security` },
      { title: 'Best Practices', href: `${base}docs/security/best-practices` },
    ]
  },
  {
    title: 'Contributing',
    items: [
      { title: 'Contributing Guide', href: `${base}docs/contributing` },
    ]
  },
  {
    title: 'Resources',
    items: [
      { title: 'FAQ', href: `${base}docs/faq` },
      { title: 'Changelog', href: `${base}docs/changelog` },
      { title: 'License', href: `${base}docs/license` },
    ]
  },
];

const currentPath = Astro.url.pathname;
---

<aside id="sidebar" class="sidebar">
  <nav class="sidebar-nav">
    {navItems.map((section) => (
      <div class="nav-section">
        <h3 class="nav-section-title">{section.title}</h3>
        <ul class="nav-section-items">
          {section.items.map((item) => {
            // Normalize paths for comparison (remove trailing slashes and base path)
            const normalizePath = (path: string) => {
              // Remove base path if present
              let normalized = path.replace(base, '/');
              // Remove trailing slash
              normalized = normalized.replace(/\/$/, '');
              // Ensure it starts with /
              if (!normalized.startsWith('/')) normalized = '/' + normalized;
              return normalized;
            };
            
            const normalizedCurrentPath = normalizePath(currentPath);
            const normalizedItemHref = normalizePath(item.href);
            
            // Check for exact match
            const isExactMatch = normalizedCurrentPath === normalizedItemHref;
            
            // Check if current path is a child of this item
            const isChildPath = normalizedCurrentPath.startsWith(normalizedItemHref + '/');
            
            // Check if any other item in the same section is a more specific match
            const hasMoreSpecificMatch = section.items.some(otherItem => {
              if (otherItem.href === item.href) return false; // Skip self
              const normalizedOtherHref = normalizePath(otherItem.href);
              return normalizedCurrentPath === normalizedOtherHref || 
                     normalizedCurrentPath.startsWith(normalizedOtherHref + '/');
            });
            
            // Item is active if it's an exact match, or if it's a parent match and no child is more specific
            const isActive = isExactMatch || (isChildPath && !hasMoreSpecificMatch);
            
            return (
              <li>
                <a 
                  href={item.href} 
                  class={`nav-item ${isActive ? 'active' : ''}`}
                >
                  {item.title}
                </a>
              </li>
            );
          })}
        </ul>
      </div>
    ))}
  </nav>
  <div class="sidebar-version ps-4">
    <div class="version-label">Version</div>
    <div id="version-number" class="version-number">Loading...</div>
  </div>
</aside>

<button id="sidebar-toggle" class="sidebar-toggle" aria-label="Toggle sidebar">
  <svg class="hamburger-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
    <path d="M3 12h18M3 6h18M3 18h18"/>
  </svg>
</button>

<style>
  .sidebar {
    position: fixed;
    top: 0;
    left: 0;
    height: 100vh;
    width: 280px;
    background-color: #121212;
    border-right: 1px solid #1f1f1f;
    overflow-y: auto;
    padding: 1.5rem 0;
    z-index: 100;
    transform: translateX(-100%);
    transition: transform 0.3s ease;
  }

  .sidebar.open {
    transform: translateX(0);
  }

  /* Desktop: sidebar always visible */
  @media (min-width: 1024px) {
    .sidebar {
      transform: translateX(0);
      position: fixed;
    }
  }

  .sidebar-nav {
    padding: 0 1rem;
  }

  .nav-section {
    margin-bottom: 2rem;
  }

  .nav-section-title {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #a3a3a3;
    margin-bottom: 0.75rem;
    padding: 0 1rem;
  }

  .nav-section-items {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .nav-item {
    display: block;
    padding: 0.5rem 1rem;
    color: #e5e5e5;
    text-decoration: none;
    border-radius: 0.375rem;
    transition: background-color 0.2s, color 0.2s;
    font-size: 0.875rem;
  }

  .nav-item:hover {
    background-color: #1f1f1f;
    color: #fff;
  }

  .nav-item.active {
    background-color: #1e40af;
    color: #fff;
  }

  .sidebar-toggle {
    display: none;
    position: fixed;
    top: 1rem;
    left: 1rem;
    z-index: 101;
    background-color: #121212;
    border: 1px solid #1f1f1f;
    border-radius: 0.375rem;
    padding: 0.5rem;
    color: #e5e5e5;
    cursor: pointer;
    transition: background-color 0.2s;
  }

  .sidebar-toggle:hover {
    background-color: #1f1f1f;
  }

  .hamburger-icon {
    width: 1.5rem;
    height: 1.5rem;
  }

  /* Desktop: sidebar always visible */
  @media (min-width: 1024px) {
    .sidebar {
      transform: translateX(0);
      position: fixed;
      height: 100vh;
    }

    .sidebar-toggle {
      display: none;
    }
  }

  /* Tablet and mobile: sidebar hidden by default */
  @media (max-width: 1023px) {
    .sidebar-toggle {
      display: block;
    }

    .sidebar-overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      z-index: 99;
      opacity: 0;
      pointer-events: none;
      transition: opacity 0.3s ease;
    }

    .sidebar-overlay.open {
      opacity: 1;
      pointer-events: all;
    }
  }
</style>

<script>
  // Toggle sidebar on mobile
  const sidebar = document.getElementById('sidebar');
  const sidebarToggle = document.getElementById('sidebar-toggle');
  const overlay = document.createElement('div');
  overlay.className = 'sidebar-overlay';
  document.body.appendChild(overlay);

  function toggleSidebar() {
    sidebar?.classList.toggle('open');
    overlay.classList.toggle('open');
  }

  sidebarToggle?.addEventListener('click', toggleSidebar);
  overlay.addEventListener('click', toggleSidebar);

  // Close sidebar when clicking a link on mobile
  const navLinks = document.querySelectorAll('.nav-item');
  navLinks.forEach(link => {
    link.addEventListener('click', () => {
      if (window.innerWidth < 1024) {
        sidebar?.classList.remove('open');
        overlay.classList.remove('open');
      }
    });
  });

  // Fetch latest version from GitHub API
  async function fetchLatestVersion() {
    try {
      const response = await fetch('https://api.github.com/repos/jimididit/nokvault/releases/latest');
      if (response.ok) {
        const data = await response.json();
        const version = data.tag_name.replace(/^v/, ''); // Remove 'v' prefix if present
        const versionElement = document.getElementById('version-number');
        if (versionElement) {
          versionElement.textContent = version;
        }
      } else {
        // Fallback if API fails
        const versionElement = document.getElementById('version-number');
        if (versionElement) {
          versionElement.textContent = 'Latest';
        }
      }
    } catch (error) {
      // Fallback on error
      const versionElement = document.getElementById('version-number');
      if (versionElement) {
        versionElement.textContent = 'Latest';
      }
    }
  }

  // Fetch version on page load
  fetchLatestVersion();
</script>
