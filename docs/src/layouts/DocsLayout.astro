---
import Sidebar from '../components/Sidebar.astro';
import GitHubButtons from '../components/GitHubButtons.astro';
import SEO from '../components/SEO.astro';
import StructuredData from '../components/StructuredData.astro';

export interface Props {
  title: string;
  description?: string;
  canonical?: string;
  keywords?: string[];
  breadcrumbs?: Array<{ name: string; url: string }>;
}

const { title, description = "Nokvault Documentation", canonical, keywords, breadcrumbs } = Astro.props;
const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;

// Generate breadcrumbs if not provided
const defaultBreadcrumbs = breadcrumbs || [
  { name: 'Home', url: base },
  { name: 'Documentation', url: `${base}docs/` },
  ...(Astro.url.pathname !== '/docs/' ? [{ name: title.replace(' - Nokvault', ''), url: Astro.url.pathname }] : [])
];
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <SEO title={title} description={description} canonical={canonical} keywords={keywords} />
    <StructuredData type="BreadcrumbList" breadcrumbs={defaultBreadcrumbs} />
  </head>
  <body class="bg-dark-bg text-dark-text min-h-screen">
    <Sidebar />
    <div class="docs-container">
      <header class="docs-header">
        <nav class="docs-header-nav">
          <a href={`${base}`} class="text-xl font-bold text-white hover:text-blue-400 transition">
            Nokvault
          </a>
          <div class="header-right">
            <div class="header-links">
              <a href={`${base}`} class="hover:text-blue-400 transition">Home</a>
              <a href={`${base}docs/`} class="hover:text-blue-400 transition">Documentation</a>
            </div>
            <GitHubButtons />
          </div>
        </nav>
      </header>
      <main class="docs-main">
        <slot />
      </main>
      <footer class="docs-footer">
        <p>&copy; {new Date().getFullYear()} Nokvault. MIT License.</p>
      </footer>
    </div>
  </body>
</html>

<style is:global>
  html {
    font-family: system-ui, -apple-system, sans-serif;
  }
  body {
    margin: 0;
  }
  code {
    background-color: #1f1f1f;
    padding: 0.2em 0.4em;
    border-radius: 0.25rem;
    font-size: 0.9em;
  }
  pre {
    background-color: #1f1f1f;
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
  }
  pre code {
    background-color: transparent;
    padding: 0;
  }
</style>

<style>
  .docs-container {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .docs-header {
    border-bottom: 1px solid #1f1f1f;
    background-color: #121212;
    padding: 1rem 2rem;
    position: sticky;
    top: 0;
    z-index: 50;
  }

  .docs-header-nav {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .header-right {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .header-links {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }

  .docs-main {
    flex: 1;
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
    padding: 2rem;
    background-color: #0a0a0a;
  }

  .docs-footer {
    border-top: 1px solid #1f1f1f;
    padding: 2rem;
    text-align: center;
    color: #a3a3a3;
    margin-top: auto;
  }

  /* Desktop: add left margin for sidebar */
  @media (min-width: 1024px) {
    .docs-container {
      margin-left: 280px;
    }

    .docs-main {
      padding: 3rem 4rem;
    }
  }

  /* Mobile adjustments */
  @media (max-width: 1023px) {
    .docs-header {
      padding: 1rem;
    }

    .docs-header-nav {
      flex-wrap: wrap;
      gap: 1rem;
    }

    .docs-main {
      padding: 1.5rem;
    }
  }
</style>
